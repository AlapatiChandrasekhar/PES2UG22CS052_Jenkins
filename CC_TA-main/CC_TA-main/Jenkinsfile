pipeline {
    agent any

    stages {
        stage('Clone repository') {
            steps {
                checkout([$class: 'GitSCM',
                    branches: [[name: '*/main']],
                    userRemoteConfigs: [[url: 'https://github.com/AlapatiChandrasekhar/PES2UG22CS052_Jenkins.git']]
                ]])
            }
        }

        stage('Build') {
            steps {
                build 'PES2UG22CS052-1'
                sh 'g++ main/new_hello.cpp -o hello_exec'  // Correct file path
            }
        }

        stage('Test') {
            steps {
                sh './hello_exec'  // Runs the compiled output
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deploying Application'
            }
        }
    }

    post {
        failure {
            error 'Pipeline failed'
        }
    }
}
